{
  "name": "pre-commit-folder-enforcer",
  "version": "1.5.0",
  "description": "Pre-commit hook enforcing folder-based commit rules with auto-prefix generation and extensible preset system",
  "type": "module",
  "main": "dist/cli/index.js",
  "types": "dist/cli/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "husky",
    "precommit": "node dist/cli/index.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "bin": {
    "precommit": "./dist/cli/index.js"
  },
  "keywords": [
    "git",
    "pre-commit",
    "hook",
    "commit",
    "validation",
    "folder-based",
    "conventional-commits",
    "preset",
    "typescript",
    "husky",
    "commit-message",
    "git-hooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mineclover/pre-commit"
  },
  "bugs": {
    "url": "https://github.com/mineclover/pre-commit/issues"
  },
  "homepage": "https://github.com/mineclover/pre-commit#readme",
  "author": "mineclover",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "husky": "^9.0.11",
    "simple-git": "^3.25.0",
    "typescript": "^5.5.4",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "CONVENTIONS.md",
    "USAGE.md"
  ]
}
